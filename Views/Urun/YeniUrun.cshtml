@model EntityFrameworkIslemler.Models.Urun

@{
    ViewBag.Title = "YeniUrun";
}

<h2>Yeni Ürün</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <form class="form-horizontal">

        <div class="form-group">
                @Html.LabelFor(model => model.KategoriId, new { @class = "control-label col-md-2" })
            <div class="col-md-10 ">
                @Html.DropDownList("KategoriId", (List<SelectListItem>)ViewBag.Kategoriler, new { style = "width:220px; height=80px;" })
                @Html.ValidationMessageFor(model => model.KategoriId)
            </div>
        </div>


        <div class="form-group">
           @Html.LabelFor(model => model.Ad, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Ad)
                @Html.ValidationMessageFor(model => model.Ad)
            </div>
        </div>
     
        <div class="form-group">
             @Html.LabelFor(model => model.Fiyat, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Fiyat)
                @Html.ValidationMessageFor(model => model.Fiyat)
            </div>
        </div>

        <div class="form-group">
             @Html.LabelFor(model => model.Stok, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Stok)
                @Html.ValidationMessageFor(model => model.Stok)
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="KAYDET" class="btn-primary" />
        </div>
    </form>
}

<div>
    @Html.ActionLink("Ürünlere Dön", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
