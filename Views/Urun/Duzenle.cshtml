@model EntityFrameworkIslemler.Models.Urun

@{
    ViewBag.Title = "Duzenle";
}

<h2>Ürün Düzenle</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    @Html.HiddenFor(model => model.Id)
    <div class="form-horizontal">
      
        <div class="form-group">
           @Html.LabelFor(model => model.KategoriId, "Kategori", new { @class="control-label col-md-2"})
            <div class="col-md-10">
                @Html.DropDownList("KategoriId",(List<SelectListItem>) ViewBag.Kategoriler,new { style = "width:220px;" })
               @Html.ValidationMessageFor(model =>model.KategoriId)
                
            </div>
        </div>
     
        <div class="form-group">
            @Html.LabelFor(model => model.Ad,new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Ad)
                @Html.ValidationMessageFor(model => model.Ad)
            </div>
        </div>

        <div class="form-group">
              @Html.LabelFor(model => model.Fiyat, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Fiyat)
                @Html.ValidationMessageFor(model => model.Fiyat)
            </div>
        </div>
        <div class="form-group">
             @Html.LabelFor(model => model.Stok, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Stok)
                @Html.ValidationMessageFor(model => model.Stok)
            </div>
        </div>
 
        <div class="col-md-offset-2 col-md-10" >
            <input type="submit" value="KAYDET" class="btn-primary" />
        </div>
       
    </div>
}

<div>
    @Html.ActionLink("Ürünlere Dön", "Index", new { id=Model.Id})
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
