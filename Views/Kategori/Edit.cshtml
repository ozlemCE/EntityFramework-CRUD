@model EntityFrameworkIslemler.Models.Kategori

@{
    ViewBag.Title = "Edit";
}

<h2>Kategori Düzenleme</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Kategori</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.Adi)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Adi)
            @Html.ValidationMessageFor(model => model.Adi)
        </div>

        <p>
            <input type="submit" value="KAYDET" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Kategorilere Dön", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
